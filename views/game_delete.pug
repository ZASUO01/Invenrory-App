extends layout

block content
    div(class="game-delete view-container p-60")
        button(class="back btn-medium" onclick="goBack()") Back
        h1(class="page-title title-2 mb-20 mt-40") Are you sure want to delete #{game.name} ?
        if errors
            ul(class="error-ul")
                for error in errors
                    li(class="error-li") !! #{error.msg}
        form(action='' method='POST' class="operation-form")
            div(class="input-block")
                label(for="password") Admin Password 
                input(type="password" name="password" required="true") 
            input(type="submit" value='Delete' class="btn-form")